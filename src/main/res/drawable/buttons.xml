<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <stroke android:width="4dp"
                android:color="#000"/>
            <gradient android:startColor="@color/grey" android:endColor="@color/indigo" android:angle="90"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <stroke android:width="2dp"
                android:color="#000"/>
            <gradient android:startColor="@color/indigo" android:endColor="@color/grey" android:angle="90"/>
            <corners
                android:radius="15dp"/>
        </shape>
    </item>
</selector>